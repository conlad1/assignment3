<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokemon</title>
    <!-- Bootstrap 5 CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Style the placeholder text for the search input */
        #pokemon_name::placeholder {
            color: #6c757d;      /* muted gray (Bootstrap's gray-600) */
            opacity: 1;          /* ensure the color isn't faded */
            font-style: italic;  /* optional */
        }
    </style>
</head>
<body class="bg-black">
    <!-- Search form section - allows users to search for pokemon in pokedex -->
    <div class="container mt-5">
        <h3 class="text-warning">Find a Pokemon</h3>
        <form action="/searchPokedex" method="POST">
            <div class="mb-3">
                <label for="pokemon_name" class="form-label text-info">Pokemon Name</label>
                <input type="text" id="pokemon_name" name="pokemon_name" 
                class="form-control" 
                placeholder="Pikachu"
                required autofocus>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger">Search</button>
            </div>
        </form>
    </div>

    <!-- Main pokemon list section - displays all pokemon in a table -->
    <div class="container mt-5">
        <h3 class="mb-4 text-warning" id="pheader">Pokemon Database</h3>
        
        <!-- Display error message if one exists -->
        <% if (typeof error_message !== 'undefined' && error_message) { %>           
            <h4 class="alert alert-danger" role="alert">
                <%= error_message %>
            </h4>
        <% } %>
        
        <!-- Show message if no pokemon found, otherwise display table -->
        <% if (pokemon.length === 0) { %> 
            <h4 class="alert alert-warning" role="alert"> 
                No pokemon found in the database 
            </h4>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr class="table-dark">
                            <!-- Dynamically render table headers from p_headers array -->
                            <% p_headers.forEach(h => { %>
                                <th>
                                    <%= h %>
                                </th>
                            <% }); %>
                            <!-- Columns for Edit and Delete buttons -->
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Dynamically render table rows for each pokemon -->
                        <% pokemon.forEach(row => { %>
                            <tr>
                                <!-- Display each field value for the pokemon -->
                                <% p_headers.forEach(h => { %>
                                    <td>
                                        <%= row[h] == null ? '' : row[h] %>
                                    </td>
                                <% }); %>
                                <% 
                                    // Check if user can edit/delete this pokemon
                                    // Managers can edit all, regular users can only edit their own
                                    const canEdit = session.level === 'm' || row.trainer === session.username;
                                %>
                                <!-- Show edit/delete buttons if user has permission -->
                                <% if (canEdit) { %>
                                    <td><a href="/pokemon/edit/<%= row.id %>" class="btn btn-primary">Edit</a></td>
                                    <td><a href="/pokemon/delete/<%= row.id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this pokemon?')">Delete</a></td>
                                <% } else { %>
                                    <!-- Empty cells if user doesn't have permission -->
                                    <td></td>
                                    <td></td>
                                <% } %>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
        <br>
        
        <!-- Action buttons -->
        <a href="/pokemon/add" class="btn btn-success mb-3">Add Pokemon</a>
        <!-- Admin Portal button only visible to managers -->
        <% if (session.level === 'm') { %>
            <a href="/users" class="btn btn-primary mb-3">Admin Portal</a>
        <% } %>
        <a href="/logout" class="btn btn-secondary mb-3">Logout</a>
    </div>

</body>
</html>