<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokemon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* target just the search input */
        #pokemon_name::placeholder {
            color: #6c757d;      /* muted gray (Bootstrap’s gray-600) */
            opacity: 1;          /* ensure the color isn’t faded */
            font-style: italic;  /* optional */
        }
    </style>
</head>
<body class="bg-black">
    <!-- search form -->
    <div class="container mt-5">
        <h3 class="text-warning">Find a Pokemon</h3>
        <form action="/searchPokemon" method="POST">
            <div class="mb-3">
                <label for="pokemon_name" class="form-label text-info">Pokemon Name</label>
                <input type="text" id="pokemon_name" name="pokemon_name" 
                class="form-control" 
                placeholder="Pikachu"
                required autofocus>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger">Search</button>
            </div>
        </form>
    </div>

    <!-- full pokemon list -->
    <div class="container mt-5">
        <h3 class="mb-4 text-warning" id="pheader">Pokemon Database</h3>
        <!-- error message -->
        <% if (typeof error_message !== 'undefined' && error_message) { %>           
            <h4 class="alert alert-danger" role="alert">
                <%= error_message %>
            </h4>
        <% } %>
        <!-- pokemon table => show error message if the table is empty -->
        <% if (pokemon.length === 0) { %> 
            <h4 class="alert alert-warning" role="alert"> 
                No pokemon found in the database 
            </h4>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr class="table-dark">
                            <!-- this dynamically renders the headers -->
                            <% p_headers.forEach(h => { %>
                                <th>
                                    <%= h %>
                                </th>
                            <% }); %>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- this dynamically reners the rows -->
                        <% pokemon.forEach(row => { %>
                            <tr>
                                <% p_headers.forEach(h => { %>
                                    <td>
                                        <%= row[h] == null ? '' : row[h] %>
                                    </td>
                                <% }); %>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
        <br>
        
        <% if (session.level === 'm') { %>
            <a href="/users" class="btn btn-primary mb-3">Admin Portal</a>
        <% } %>
        <a href="/logout" class="btn btn-secondary mb-3">Logout</a>
    </div>

</body>
</html>