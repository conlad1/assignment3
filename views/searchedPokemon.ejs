<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Searched Pokemon</title>
    <!-- Bootstrap 5 CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-black">
    <!-- Search results page - displays pokemon found in pokedex search -->
    <div class="container mt-5">
        <h3 class="mb-4 text-warning" id="pheader">Search Results</h3>
        
        <!-- Display error message if one exists -->
        <% if (typeof error_message !== 'undefined' && error_message) { %>           
            <h4 class="alert alert-danger" role="alert">
                <%= error_message %>
            </h4>
        <% } %>
        
        <!-- Show message if no pokemon found, otherwise display table -->
        <% if (pokemon.length === 0) { %> 
            <h4 class="alert alert-warning" role="alert"> 
                No pokemon found in the database 
            </h4>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr class="table-dark">
                            <!-- Dynamically render table headers from p_headers array -->
                            <% p_headers.forEach(h => { %>
                                <th>
                                    <%= h %>
                                </th>
                            <% }); %>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Dynamically render table rows for each pokemon found -->
                        <% pokemon.forEach(row => { %>
                            <tr>
                                <!-- Display each field value for the pokemon -->
                                <% p_headers.forEach(h => { %>
                                    <td>
                                        <%= row[h] == null ? '' : row[h] %>
                                    </td>
                                <% }); %>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
        
        <!-- Back to home button -->
        <div class="mb-4">
            <a href="/" class="btn btn-danger">Back to Pokemon Database</a>
        </div>
    </div>
</body>
</html>